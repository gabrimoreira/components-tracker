<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Home</title>
    <%- include('partials/head') %>
  </head>
  <body class="poppins-regular bg-base">
    <%- include('partials/navbar') %>

    <main class="container-signup">
      <h1 class="title">Sign-up</h1>

      <form action="/sign-up" method="POST" class="form mt-4">
        <div class="form-element">
          <label for="name">Nome completo</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="input"
            placeholder="Seu nome completo"
          />
        </div>

        <div class="form">
          <label for="accountType">Tipo de Conta</label>
          <select id="accountType" name="accountType" class="input" required>
            <option value="" disabled selected>
              Selecione o tipo de conta
            </option>
            <option value="basic">Estudante</option>
            <option value="premium">Técnico</option>
            <option value="admin">Administrador</option>
          </select>
        </div>
        <div class="form-element">
          <label for="name">Instituição</label>
          <input
            type="text"
            id="school"
            name="school"
            required
            class="input"
            placeholder="Nome da Instituição"
          />
        </div>
        <div class="form-element">
          <label for="email">E-mail</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="input"
            placeholder="seu@email.com"
          />
        </div>

        <div class="form-element">
          <label for="password">Senha</label>
          <input
            type="password"
            id="password"
            name="password"
            required
            class="input"
            placeholder="Crie uma senha segura"
          />
        </div>

        <div class="form-element">
          <label for="confirmPassword">Confirmar Senha</label>
          <input
            type="password"
            id="confirmPassword"
            name="confirmPassword"
            required
            class="input"
            placeholder="Repita a senha"
          />
        </div>

        <button type="submit" class="btn btn-primary mt-3">Cadastrar</button>
      </form>
    </main>

    <%- include('partials/footer') %>
  </body>
</html>
