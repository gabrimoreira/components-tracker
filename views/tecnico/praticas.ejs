<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Todas as Práticas</title>
    <%- include('partials/head') %>
  </head>
  <body class="poppins-regular bg-base">
    <%- include('partials/navbar') %>

    <main class="container">
      <h1 class="title">Todas as Práticas Cadastradas</h1>

      <section class="student-praticas">
        <% if (praticas && praticas.length > 0) { %>
          <% praticas.forEach(pratica => { %>
            <div class="student-card">
              <h2><%= pratica.titulo %></h2>
              <p><strong>Turma ID:</strong> <%= pratica.turmaId %></p>
              <p><strong>Descrição:</strong> <%= pratica.descricao %></p>
              
              <% if (pratica.componentes && pratica.componentes.length > 0) { %>
                <p><strong>Componentes:</strong></p>
                <ul>
                  <% pratica.componentes.forEach(comp => { %>
                    <li>
                      <%= comp.nome %> 
                      <% if (comp.ids) { %>
                        (IDs: <%= comp.ids.join(', ') %>)
                      <% } else if (comp.quantidade) { %>
                        (Qtd: <%= comp.quantidade %>)
                      <% } %>
                    </li>
                  <% }) %>
                </ul>
              <% } else { %>
                <p><strong>Componentes:</strong> Nenhum componente associado.</p>
              <% } %>
            </div>
          <% }) %>
        <% } else { %>
          <p>Nenhuma prática encontrada.</p>
        <% } %>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>