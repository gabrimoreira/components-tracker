<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8" />
    <title>Adicionar Componente</title>
    <%- include('partials/head') %>
</head>
<body class="poppins-regular bg-base">
    <%- include('partials/navbar') %>

    <main class="container-signup">
        <h1 class="title">Novo Componente</h1>

        <form action="/add-componentes" method="POST" class="form mt-4">
            <div class="form-element">
                <label for="nome">Nome do Componente</label>
                <input type="text" id="nome" name="nome" required class="input" placeholder="Ex: Arduino Uno" />
            </div>

            <div class="form-element">
                <label for="descricao">Descrição</label>
                <textarea id="descricao" name="descricao" class="input" rows="3" placeholder="Ex: Placa de desenvolvimento baseada no ATmega328P"></textarea>
            </div>
            
            <div class="form-element">
                <label for="laboratorio">Laboratório</label>
                <input type="text" id="laboratorio" name="laboratorio" required class="input" placeholder="Ex: Lab. de Eletrônica" />
            </div>

            <div class="form-element">
                <label for="tipo">Tipo</label> <select id="tipo" name="tipo" class="input" required>
                    <option value="" disabled selected>Selecione um tipo</option>
                    <option value="microcontrolador">Microcontrolador</option>
                    <option value="passivo">Componente Passivo</option>
                    <option value="sensor">Sensor</option>
                    <option value="atuador">Atuador</option>
                    <option value="outro">Outro</option>
                </select>
            </div>

            <div class="form-element">
                <input type="checkbox" id="exigeId" name="exigeId" value="true" />
                <label for="exigeId">Este componente possui ID individual?</label>
            </div>

            <div class="form-element" id="quantidade-wrapper">
                <label for="quantidade">Quantidade</label>
                <input type="number" id="quantidade" name="quantidade" class="input" min="1" placeholder="Ex: 10" />
            </div>

            <div class="form-element" id="ids-wrapper" style="display: none;">
                <label for="ids">IDs dos Componentes (um por linha)</label>
                <textarea id="ids" name="ids" class="input" rows="3" placeholder="ID-001&#10;ID-002&#10;ID-003"></textarea>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Cadastrar Componente</button>
        </form>
    </main>

    <%- include('../partials/footer') %>

    <script src="/js/professor.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', initializeAddComponentesForm);
    </script>
</body>
</html>