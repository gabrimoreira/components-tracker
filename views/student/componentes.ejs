<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <title>Home</title>
    <%- include('partials/head') %>
  </head>
  <body class="poppins-regular bg-base">
    <%- include('partials/navbar') %>

    <main class="container">
      <h1 class="title">Componentes</h1>

      <form method="GET" action="/componentes" class="componentes-form">
        <input
          type="text"
          name="search"
          placeholder="Buscar componente..."
          value="<%= search || '' %>"
          class="componentes-search"
        />
        <button type="submit" class="btn-header">Buscar</button>
      </form>

      <section class="componentes-grid">
        <% if (componentes.length === 0) { %>
        <p>Nenhum componente encontrado.</p>
        <% } else { %> <% componentes.forEach(comp => { %>
        <div class="componentes-card">
          <h2><%= comp.nome %></h2>
          <p><strong>Quantidade:</strong> <%= comp.quantidade %></p>
          <p><strong>Laborat√≥rio:</strong> <%= comp.laboratorio %></p>
        </div>
        <% }) %> <% } %>
      </section>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
